<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="cn.mini.domain">
	
	<class name="SingerPhoto"  table="singer_photo" >
		<cache usage="read-write" region="SingerPhoto"/>
		<id name="id" >
			<generator class="native" />
		</id>	
		<property name="singerName" column="singer_name" />
		<property name="bigPhoto" column=" big_photo" />
		<property name="smallPhoto" column="small_photo" />		
	</class>
	
</hibernate-mapping>
